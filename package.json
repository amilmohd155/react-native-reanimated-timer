{
  "name": "react-native-reanimated-chrono",
  "version": "0.4.0",
  "description": "A reanimated library for displaying timer, stopwatch and time.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "example": "yarn workspace react-native-reanimated-chrono-example",
    "test": "jest",
    "typecheck": "tsc --skipLibCheck --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib/typescript/src",
    "prepare": "bob build && yarn copy-dts",
    "release": "rm -rf lib && yarn prepare && release-it"
  },
  "keywords": [
    "react-native",
    "reanimated",
    "chrono",
    "timer",
    "stopwatch",
    "time",
    "clock",
    "countdown",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amilmohd155/reanimated-chrono.git"
  },
  "author": "Amil Muhammed Hamza <amilmohd155@gmail.com> (https://github.com/amilmohd155)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amilmohd155/reanimated-chrono/issues"
  },
  "homepage": "https://github.com/amilmohd155/reanimated-chrono#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.79.2",
    "@release-it/conventional-changelog": "^9.0.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.12",
    "commitlint": "^19.6.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.11",
    "react-native-reanimated": "^3.17.5",
    "react-test-renderer": "19.0.0",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.50.3"
  }
}
